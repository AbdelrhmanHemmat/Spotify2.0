<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SpotifyAPI-Parallel" parallel="methods" thread-count="10" verbose="2">

    <listeners>
        <listener class-name="com.Spotify.oauth2.Utils.AllureTestListener"/>
    </listeners>
    <test name="All-Spotify-Tests">
        <classes>

            <!-- Negative Playlist -->
            <class name="com.Spotify.oauth2.tests.NegativeTests.PlayList.AddPlayListNegativeTests"/>
            <class name="com.Spotify.oauth2.tests.NegativeTests.PlayList.DeletePlayListsNegativeTests"/>
            <class name="com.Spotify.oauth2.tests.NegativeTests.PlayList.GetPlayListsNegativeTests"/>
            <class name="com.Spotify.oauth2.tests.NegativeTests.PlayList.UpdatePlayListsNegativeTests"/>

            <!-- Negative Tracks -->
            <class name="com.Spotify.oauth2.tests.NegativeTests.tracks.AddTracksNegativeTests"/>
            <class name="com.Spotify.oauth2.tests.NegativeTests.tracks.DeleteTracksNegativeTests"/>
            <class name="com.Spotify.oauth2.tests.NegativeTests.tracks.UpdateTracksNegativeTests"/>

            <!-- Negative User -->
            <class name="com.Spotify.oauth2.tests.NegativeTests.User.GetUserNegativeTests"/>

            <!-- Positive Playlist -->
            <class name="com.Spotify.oauth2.tests.PositiveTests.PlayList.CreatePlayListPositiveTests"/>
            <class name="com.Spotify.oauth2.tests.PositiveTests.PlayList.DeletePlayListPostiveTests"/>
            <class name="com.Spotify.oauth2.tests.PositiveTests.PlayList.GetPlayListPositiveTests"/>
            <class name="com.Spotify.oauth2.tests.PositiveTests.PlayList.UpdatePlayListsPositiveTests"/>

            <!-- Positive Tracks -->
            <class name="com.Spotify.oauth2.tests.PositiveTests.tracks.AddTracksPositiveTests"/>
            <class name="com.Spotify.oauth2.tests.PositiveTests.tracks.DeleteTracksPositiveTests"/>
            <class name="com.Spotify.oauth2.tests.PositiveTests.tracks.GetTracksPositiveTests"/>
            <class name="com.Spotify.oauth2.tests.PositiveTests.tracks.UpdateTracksPositiveTests"/>

            <!-- Positive User -->
            <class name="com.Spotify.oauth2.tests.PositiveTests.User.getUser"/>

        </classes>
    </test>

</suite>